{
    "manifest_version": 3,
    "name": "D365 Translation Manager",
    "version": "1.0.0",
    "description": "Streamline Dynamics 365 multilingual translations. Edit entity labels, form structures, and option sets across all languages.",
    "action": {
        "default_title": "D365 Translation Manager",
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "browsingData",
        "storage"
    ],
    "host_permissions": [
        "https://*.dynamics.com/*"
    ],
    "background": { "service_worker": "background.js" }
}